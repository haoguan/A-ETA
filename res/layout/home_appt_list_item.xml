<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_list_time"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="12pm"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:orientation="vertical"
        android:weightSum="10" >

        <LinearLayout
            android:id="@+id/ll_list_travel"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@color/etaDarkGrey"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="10" >

            <TextView
                android:id="@+id/tv_list_travel"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:gravity="left|center"
                android:paddingLeft="15dp"
                android:text="Travel"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/tv_list_icon_travel"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:paddingRight="15dp"
                android:src="@drawable/directions_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_list_name"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@color/etaGrey"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:weightSum="10" >

            <TextView
                android:id="@+id/tv_appt_list_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:gravity="left|center"
                android:paddingLeft="15dp"
                android:text="Tom Hird"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/tv_list_icon_arrow"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:paddingRight="15dp"
                android:src="@drawable/name_arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>