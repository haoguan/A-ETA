<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colors -->
    <color name="etaBlack">#282828</color>
    <color name="etaBlue">#1d6e8b</color>
    <color name="etaBeige">#edefec</color>
    <color name="etaGrey">#b8b8b8</color>
    <color name="etaDarkGrey">#818181</color>
    <color name="etaWhite">#ffffff</color>
    <color name="etaDialogBlue">#50a5bb</color>
    <color name="etaRoutePurple">#8D8DFF</color>
    <color name="etaRed">#a70707</color>

    <!-- spinner array -->

    <string-array name="late_times">
        <item>15 min</item>
        <item>30 min</item>
        <item>45 min</item>
        <item>1 hr</item>
        <item>1 hr, 15 min</item>
        <item>1 hr, 30 min</item>
        <item>1 hr, 45 min</item>
        <item>2 hr</item>
    </string-array>

    <!-- Styles -->
    <style name="conflicts_dialog_appt_name">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textColor">@color/etaWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="conflicts_dialog_appt_time">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/etaWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>